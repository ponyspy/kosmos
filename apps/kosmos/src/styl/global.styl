@media screen and (max-width: 680px) {
	.title_block, .content_block, .footer_block {
		padding-left 20px!important
		padding-right 20px!important
	}
}

html, body
	margin 0
	padding 0
	font-smoothing: antialiased;
	-moz-osx-font-smoothing: grayscale;

a
	color black

.title_block a, .footer_block a
	text-decoration none
	&:hover
		border-bottom 1px solid black
	&.active
		text-decoration none
		border-bottom 1px solid black

.main_block
	max-width 960px
	margin 0 auto
	overflow hidden
	position relative
	padding-top 20px
	padding-bottom 20px
	box-sizing border-box
	font 12pt/14pt 'MinionPro Medium'
	// border 1px solid red

.title_block
	height 100px
	padding-left 40px
	padding-right 40px
	padding-bottom 40px
	.stargazer_block
		margin-top 5px
	.menu_block
		font 14pt/16pt 'MinionPro Medium'
		display flex
		justify-content space-between
		border-bottom 1px solid transparent
		letter-spacing 4px

.content_block
	padding-left 40px
	padding-right 40px
	box-sizing border-box

.footer_block
	padding-top 150px
	padding-left 40px
	padding-right 40px
	box-sizing border-box
	display flex
	justify-content space-between
	.logo, .contatcs
		flex 5
	.language
		flex 4
	a
		margin-left 10px