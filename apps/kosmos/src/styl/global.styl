html, body
	margin 0
	padding 0

a
	color black
	text-decoration none
	&:hover
		text-decoration underline

.main_block
	max-width 960px
	margin 0 auto
	overflow hidden
	padding 40px
	box-sizing border-box
	border 1px solid red
	// font 12pt/14pt 'Pragmatica Extended Regular'

.title_block
	padding-bottom 20px
	.menu_block
		display flex
		justify-content space-between

.footer_block
	display flex
	justify-content space-between
	padding-top 150px
	span, a
		margin-left 6px
	.logo
	.language
	.contacts
		display flex