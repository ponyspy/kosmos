html, body
	margin 0
	padding 0

a
	color black
	text-decoration none
	&:hover
		text-decoration underline

.main_block
	max-width 960px
	margin 0 auto
	overflow hidden
	position relative
	padding-top 20px
	padding-bottom 20px
	box-sizing border-box
	border 1px solid red
	// font 12pt/14pt 'Pragmatica Extended Regular'

.title_block
	padding-left 40px
	padding-right 40px
	padding-bottom 20px
	.menu_block
		display flex
		justify-content space-between

.content_block
	padding-left 40px
	padding-right 40px
	box-sizing border-box

.footer_block
	padding-top 150px
	padding-left 40px
	padding-right 40px
	box-sizing border-box
	display flex
	justify-content space-between
	span, a
		margin-left 6px
		&.select
			font-weight bold
	.logo, .language, .contacts
		display flex