html, body
	margin 0
	padding 0

a
	color black

.title_block a, .footer_block a
	text-decoration none
	&:hover
		border-bottom 1px solid black
	&.active
		text-decoration none
		border-bottom 1px solid black

.main_block
	max-width 960px
	margin 0 auto
	overflow hidden
	position relative
	padding-top 20px
	padding-bottom 20px
	box-sizing border-box
	font 12pt/14pt 'MinionPro Medium'
	// border 1px solid red

.title_block
	height 100px
	padding-left 40px
	padding-right 40px
	padding-bottom 40px
	.stargazer_block
		margin-top 5px
	.menu_block
		font 14pt/16pt 'MinionPro Medium'
		display flex
		justify-content space-between
		border-bottom 1px solid transparent

.content_block
	padding-left 40px
	padding-right 40px
	box-sizing border-box

.footer_block
	padding-top 150px
	padding-left 40px
	padding-right 40px
	box-sizing border-box
	display flex
	justify-content space-between
	a
		margin-left 10px