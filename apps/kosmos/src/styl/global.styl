html, body
	margin 0
	padding 0

a
	color black
	text-decoration none
	&:hover
		text-decoration underline

.main_block
	max-width 960px
	margin 0 auto
	overflow hidden
	position relative
	padding-top 20px
	padding-bottom 20px
	box-sizing border-box
	font 12pt/14pt 'MinionPro Medium'
	border 1px solid red

.title_block
	height 100px
	padding-left 40px
	padding-right 40px
	padding-bottom 40px
	.menu_block
		font 14pt/16pt 'MinionPro Medium'
		display flex
		justify-content space-between
		a.active
			font 14pt/16pt 'MinionPro Semibold'

.content_block
	padding-left 40px
	padding-right 40px
	box-sizing border-box

.footer_block
	padding-top 150px
	padding-left 40px
	padding-right 40px
	box-sizing border-box
	display flex
	justify-content space-between
	a
		margin-left 10px
		&.active
			font 12pt/14pt 'MinionPro Semibold'