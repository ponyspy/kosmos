@media screen and (max-width: 680px)
	@import 'mobile/_works.styl'

body.research
	background-color black
	color white
	a
		color white
	.title_block a, .footer_block a
		&:hover
			border-bottom 1px solid white
		&.active
			border-bottom 1px solid white
	.menu_block
		background-color black
	.menu_drop span
		background-color white
	.footer_block .logo span:hover
		border-bottom 1px solid white

.title_block
	padding-bottom 30px

.footer_block
	padding-top 10px

.works_block
	width 100%
	display flex
	flex-direction row
	flex-wrap wrap
	.work_item
		text-decoration none
		position relative
		width 40%
		margin-left 5%
		margin-right 5%
		margin-top 10px
		margin-bottom 140px
		.work_poster
			position relative
			// padding-bottom 56.25%
			padding-bottom 70%
			height 0
			overflow hidden
			max-width 100%
			transition .3s linear
			.poster_image
				background-size contain
				background-position center
				background-repeat no-repeat
				position absolute
				top 0
				left 0
				width 100%
				height 100%
		.work_title
			margin-top 20px
			font 26pt/28pt 'MinionPro Semibold'
			letter-spacing 2px
		.work_s_title
			position absolute
			display none
			top 0
			width 100%
			height 100%
			padding-top 20px
			box-sizing border-box
			font 20pt/22pt 'MinionPro Semibold'
			letter-spacing 2px
		&:hover
			.work_s_title
				display block
			.work_poster
				transition .3s linear
				filter: opacity(.3) blur(2px)