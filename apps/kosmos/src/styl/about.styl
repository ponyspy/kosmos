.block_title
	font 26pt/28pt 'MinionPro Medium'
	margin-top 100px
	margin-bottom 60px

.block_poster
	width 100%
	display block

.cv_block
	overflow hidden
	.cv_email
		display block
		font 26pt/28pt 'MinionPro Semibold'
	.cv_adress
		margin-top 80px
		width 40%
		float left
		padding-right 20px
		box-sizing border-box
		font 26pt/28pt 'MinionPro Semibold'
	.cv_body
		margin-top 80px
		width 60%
		float right
		padding-left 20px
		box-sizing border-box
		hyphens auto
		font 16pt/22pt 'MinionPro Medium'


.peoples_block
	overflow hidden
	margin-top 40px
	margin-bottom 100px
	.block_title
		float left
		margin-top 0
	.block_items
		float right
		overflow hidden
		.people_item
			display block
			text-decoration none
			float left
			margin-left 40px
			.people_photo
				width 180px
				height 220px
				background-color lightgrey
			.people_name
			.people_open
				text-align center
				font 16pt/22pt 'MinionPro Medium'
			.people_open
				display none
			&:hover
				.people_name
					display none
				.people_open
					display block

.awards_block
	.block_items
		.award_item
			overflow hidden
			margin-bottom 20px
			.award_title
				float left
				width 50%
				font 16pt/22pt 'MinionPro Semibold'
			.award_s_title
				float left
				width 25%
				font 16pt/22pt 'MinionPro MediumIt'
			.award_place
				float left
				width 15%
				font 14pt/22pt 'MinionPro Medium'
			.award_year
				float left
				width 10%
				font 14pt/22pt 'MinionPro Medium'

.events_block
	margin-bottom 100px
	.block_items
		.event_item
			overflow hidden
			margin-bottom 20px
			.event_title
				float left
				width 50%
				font 16pt/22pt 'MinionPro Semibold'
			.event_s_title
				float left
				width 25%
				font 16pt/22pt 'MinionPro MediumIt'
			.event_place
				float left
				width 15%
				font 14pt/22pt 'MinionPro Medium'
			.event_year
				float left
				width 10%
				font 14pt/22pt 'MinionPro Medium'