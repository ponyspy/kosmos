.block_title
	font 26pt/28pt 'MinionPro Medium'

.block_poster
	width 100%
	display block

.cv_block
	overflow hidden
	.cv_email
		display block
		font 26pt/28pt 'MinionPro Semibold'
	.cv_adress
		margin-top 80px
		width 40%
		float left
		padding-right 20px
		box-sizing border-box
		font 26pt/28pt 'MinionPro Semibold'
	.cv_body
		margin-top 80px
		width 60%
		float right
		padding-left 20px
		box-sizing border-box
		hyphens auto
		font 16pt/22pt 'MinionPro Medium'


.peoples_block
	overflow hidden
	margin-top 40px
	margin-bottom 100px
	.block_title
		float left
	.block_items
		float right
		overflow hidden
		.people_item
			display block
			text-decoration none
			float left
			margin-left 40px
			.people_photo
				width 180px
				height 220px
				background-color lightgrey
			.people_name
			.people_open
				text-align center
				font 16pt/22pt 'MinionPro Medium'
			.people_open
				display none
			&:hover
				.people_name
					display none
				.people_open
					display block
