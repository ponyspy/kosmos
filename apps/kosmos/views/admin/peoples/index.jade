extends ../layout
include _peoples.jade

block paths
	- var content_title= 'КОМАНДА'

block content_style
	link(rel='stylesheet', type='text/css', href='/build/' + __app_name + '/css/add.css' + version)

block content_scripts
	script(type='text/javascript', src='/build/' + __app_name + '/js/lists.js' + version)

block sub_menu
	a.sub_item.back_link(href='/admin') Назад
	span.sub_item.toggle_rm Удалить
	.sub_right_block

		.sub_drop.type(style='z-index: 2;')
			.drop_title Тип
			.drop_inner
				.drop_item(class='all').select Все
				.drop_item(class='master') Партнеры
				.drop_item(class='slave') Коллабораторы

		.sub_drop.status(style='z-index: 1;')
			.drop_title Статус
			.drop_inner
				.drop_item(class='all').select Все
				.drop_item(class='default') Обычный
				.drop_item(class='hidden') Скрытый

		input.sub_search(type='text', placeholder='Поиск...')

block content
	.title= content_title
	br
	a.add(href='/admin/peoples/add') + Добавить человека
	br
	br
	.lists_block
		.list_items
			+items(peoples)
		.list_counter
			+counters(count)