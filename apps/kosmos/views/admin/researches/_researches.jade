mixin items(researches)
	each research in researches
		.list_item
			a.item_rm.research(href='#', id=research._id) удалить
			a.item_title(href='/admin/researches/edit/' + research._id, class=research.status =='hidden' ? 'hidden': '')= (research.i18n.title.get('ru') || '!!! ПУСТОЕ ПОЛЕ !!!')

mixin counters(count, skip)
	a.list_back(href='#'): b назад
	span= ' - '
	select.list_select
		- var i = 0;
		while i < count
			option(value=i selected= (i == skip / 10) )= i+1
			- i++
	span= ' - '
	a.list_next(href='#'): b вперед


if load_list
	.list_items
		+items(researches)
	.list_counter
		+counters(count, skip)