extends ../layout
include ../_forms.jade

block paths
	- var content_title= 'РЕДАКТИРОВАТЬ РАБОТУ'

block content_style
	link(rel='stylesheet', type='text/css', href='/libs/css/pickmeup.min.css' + version)
	link(rel='stylesheet', type='text/css', href='/libs/css/font-awesome.css' + version)
	link(rel='stylesheet', type='text/css', href='/libs/css/wysiwyg-editor.min.css' + version)
	link(rel='stylesheet', type='text/css', href='/build/' + __app_name + '/css/add.css' + version)

block content_scripts
	script(type='text/javascript', src='/libs/js/jquery.pickmeup.min.js' + version)
	script(type='text/javascript', src='/libs/js/wysiwyg.min.js' + version)
	script(type='text/javascript', src='/libs/js/wysiwyg-editor.min.js' + version)
	script(type='text/javascript', src='/libs/js/jquery-ui.min.js' + version)
	script(type='text/javascript', src='/libs/js/jquery.filedrop.js' + version)
	script(type='text/javascript', src='/build/' + __app_name + '/js/upload.js' + version)
	script(type='text/javascript', src='/build/' + __app_name + '/js/editor.js' + version)
	script(type='text/javascript', src='/build/' + __app_name + '/js/add.js' + version)
	script(type='text/javascript', src='/build/' + __app_name + '/js/a_events.js' + version)

block sub_menu
	a.sub_item.back_link(href='/admin/works') Назад
	span.sub_item.toggle_eng Перевод

block content
	.form_block
		.title= content_title
		form(action="", method="post", enctype="multipart/form-data")
			.form_title Название:
			+form_text_single('title', work)
			.form_title Подзаголовок:
			+form_text_single('s_title', work)
			.form_title Синоним:
			input(type='text', name='sym', value=work.sym, placeholder=work._short_id)
			.form_title Год:
			input(type='number', name='year', value=work.year)
			.form_title Заказчик:
			+form_text_single('client', work)
			.form_title Площадь:
			+form_text_single('area', work)
			.form_title Описание:
			+form_text_multi('description', work)
			.form_title Обложка:
			+form_single_file('poster', work)(accept='image/jpeg,image/png,image/gif')
			.form_title Обложка (в колонке):
			+form_single_file('poster_column', work)(accept='image/jpeg,image/png,image/gif')
			.form_title Изображения:
			+form_images_upload(work.images)
			.form_title Файлы ZIP / PDF:
			+form_multiple_files('attach', work)(accept='application/pdf,application/zip')
			.form_title Категории:
			+form_multiple_select('categorys', categorys, work.categorys)
			.form_title Тип:
			select(name='type')
				option(value='project', selected= work.type == 'project' && 'project') Проект
				option(value='research', selected= work.type == 'research' && 'research') Исследование
			.form_title Статус:
			select(name='status')
				option(value='base') Обычный
				option(value='hidden', selected= work.status == 'hidden' && 'hidden') Скрытый
				option(value='special', selected= work.status == 'special' && 'special') Особый
			.form_title Дата публикации:
			+form_date('date', work.date)
			br
			br
			input(type='submit', value='отправить')