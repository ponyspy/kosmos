doctype html
html
	head
		block paths
		include header
	body(class=menu_active)
		.main_block
			.title_block
				.menu_block
					a(href='/', class=menu_active == 'main' ? 'active' : ''): span= __('KOSMOS')
					a(href='/office', class=menu_active == 'office' ? 'active' : ''): span= __('OFFICE')
					a(href='/projects', class=menu_active == 'project' ? 'active' : ''): span= __('PROJECTS')
					a(href='/research', class=menu_active == 'research' ? 'active' : ''): span= __('RESEARCH')
					//- info@k-s-m-s.com
					a.mail(href='mailto:kosmos.arch@gmail.com'): span kosmos.arch@gmail.com
				if (session && session.user_id)
					.stargazer_block
							a(href='/auth') stargazer
							span= ' | '
							a(href='/auth/logout') выход
			.content_block
				block content
			.footer_block
				.logo!= '&copy;K-S-M-S ' + new Date().getFullYear()
				.language
					a(href='/lang/ru', class=locale == 'ru' ? 'active': ''): span RUS
					a(href='/lang/en', class=locale == 'en' ? 'active': ''): span ENG
				.contacts
					//- info@k-s-m-s.com
					a(href='mailto:kosmos.arch@gmail.com')
						span.text e-mail
					a(href='https://www.facebook.com/kosmosarchitects', target='_blank')
						span facebook
						img(src='/stuff/' + __app_name +'/icons/social/fb.svg')
					a(href='https://www.instagram.com/kosmos_architects', target='_blank')
						span instagram
						img(src='/stuff/' + __app_name +'/icons/social/instagram.svg')