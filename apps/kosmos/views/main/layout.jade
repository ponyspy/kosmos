doctype html
html
	head
		block paths
		include header
	body
		.main_block
			.title_block
				.menu_block
					a(href='/') K O S M O S
					a(href='/about')= __('A B O U T')
					a(href='/works')= __('W O R K S')
					a(href='/research')= __('R E S E A R C H')
				//- if (session && session.user_id)
					.stargazer_block
							a(href='/auth') stargazer
							span= ' | '
							a(href='/auth/logout') выход
			.content_block
				block content
			.footer_block
				.logo!= '&copy;K-S-M-S ' + new Date().getFullYear()
				.language
					a(href='/lang/ru', class=locale == 'ru' ? 'select': '') RUS
					a(href='/lang/en', class=locale == 'en' ? 'select': '') ENG
				.contacts
					a(href='mailto:info@k-s-m-s.com') e-mail
					a(href='https://www.facebook.com/profile.php?id=100009737497399', target='_blank') facebook
					a(href='https://www.instagram.com/kosmos_architects', target='_blank') instagram