extends layout

block paths
	- var content_title= __('KOSMOS') + ' | ' + __('OFFICE')
	- var content_description = locale == 'ru' ? cv_ru : cv_en
	- var menu_active = 'office'

block content_style
	link(rel='stylesheet', type='text/css', href='/libs/css/swiper.min.css' + version)
	link(rel='stylesheet', type='text/css', href='/build/' + __app_name + '/css/office.css' + version)

block content_scripts
	script(type='text/javascript', src='/libs/js/swiper.jquery.min.js' + version)
	script(type='text/javascript', src='/build/' + __app_name + '/js/office.js' + version)

block content
	.cv_block
		.contacts_block
			//- info@k-s-m-s.com
			a.cv_email(href='mailto:kosmos.arch@gmail.com') kosmos.arch@gmail.com
			.cv_adress!= locale == 'ru' ? adress_ru : adress_en
			.cv_body!= locale == 'ru' ? cv_ru : cv_en


		.peoples_block
			.block_title= __('Team')
			.block_items
				.items_master
					each people in peoples
						if people.type == 'master'
							if people.attach_cv
								a.block_item.open(href=people.attach_cv)
									.item_photo(style='background-image: url(' + people.photo + ')')
									.item_name= people.i18n.name.get(locale)
									.item_open= __('Open CV')
							else
								.block_item
									.item_photo(style='background-image: url(' + people.photo + ')')
									.item_name= people.i18n.name.get(locale)
				.items_slave
					each people in peoples
						if people.type == 'slave'
							if people.attach_cv
								a.item_name(href=people.attach_cv, target='_blank')= people.i18n.name.get(locale)
							else
								.item_name= people.i18n.name.get(locale)


	//- img.block_poster(src='/stuff/kosmos/backgrounds/about.png')


	if press.length > 0
		.press_block
			.block_title= __('Press')
			.block_items
				each item, i in press
					- var link = item.attach ? item.attach : item.link
					a.block_item(href=link, class= (i >= 12) ? 'hidden' : '', class= !link ? 'no_link' : '',  target='_blank', onclick= !link ? 'return false;' : '')
						.item_poster(style='background-image: url(' + item.poster + ')')
						.item_title= item.i18n.title.get(locale)
						.item_s_title= item.i18n.s_title.get(locale)
						.item_year= item.year
			if (press.length >= 12)
				.block_cut: span=  __('More') + ' ' +  __('Press')


	if awards.length > 0
		.awards_block
			.block_title= __('Awards')
			.block_items
				each award, i in awards
					.block_item(class= (i >= 9) ? 'hidden' : '')
						.item_title= award.i18n.title.get(locale)
						.item_s_title= award.i18n.s_title.get(locale)
						.item_place= award.i18n.place.get(locale)
						.item_year= award.year
			if (awards.length >= 9)
				.block_cut: span=  __('More') + ' ' +  __('Awards')


	if events.length > 0
		.events_block
			.block_title= __('Events')
			.block_items
				each event, i in events
					.block_item(class= (i >= 9) ? 'hidden' : '')
						.item_title= event.i18n.title.get(locale)
						.item_s_title= event.i18n.s_title.get(locale)
						.item_place= event.i18n.place.get(locale)
						.item_year= event.year
			if (events.length >= 9)
				.block_cut: span= __('More') + ' ' +  __('Events')


	//- img.block_poster(src='/stuff/kosmos/backgrounds/about.png')

